<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="7.5dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/main_item_guide1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.027" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/main_item_guide2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.100" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/main_item_guide3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.660" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/main_item_guide4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.550" />

            <TextView
                android:id="@+id/tv_room_name_main_item"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Sample text"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/main_item_guide4"
                app:layout_constraintEnd_toEndOf="@id/main_item_guide3"
                app:layout_constraintStart_toStartOf="@id/main_item_guide1"
                app:layout_constraintTop_toTopOf="@id/main_item_guide2" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/main_item_guide5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.863" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/main_item_guide6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.517" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/main_item_guide7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.956" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/main_item_guide8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.884" />

            <TextView
                android:id="@+id/tv_count_main_item"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="2/8"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/main_item_guide8"
                app:layout_constraintEnd_toEndOf="@id/main_item_guide7"
                app:layout_constraintStart_toStartOf="@id/main_item_guide5"
                app:layout_constraintTop_toTopOf="@id/main_item_guide6" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>