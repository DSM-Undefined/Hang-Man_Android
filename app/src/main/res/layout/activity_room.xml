<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.RoomActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_wrapper_recycler_room"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@+id/layout_bottom_room"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:orientation="vertical"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_character1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:scaleType="fitXY"
                    tools:srcCompat="@tools:sample/avatars" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_character3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:scaleType="fitXY"
                    tools:srcCompat="@tools:sample/avatars" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_character5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:background="#FFFFFF"
                    android:scaleType="fitXY"
                    tools:srcCompat="@tools:sample/avatars" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:orientation="vertical"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline12"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_character2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:scaleType="fitXY"
                    tools:srcCompat="@tools:sample/avatars" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_character4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:scaleType="fitXY"
                    tools:srcCompat="@tools:sample/avatars" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_character6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:background="#FFFFFF"
                    android:scaleType="fitXY"
                    tools:srcCompat="@tools:sample/avatars" />
            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_bottom_room"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_wrapper_recycler_room">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/room_toolbar_guide1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.031"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/room_toolbar_guide2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.138"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/room_toolbar_guide3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.195"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/room_toolbar_guide4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.876"/>

        <ImageView
            android:id="@+id/img_user_room"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/room_toolbar_guide2"
            app:layout_constraintBottom_toBottomOf="@id/room_toolbar_guide4"
            app:layout_constraintStart_toStartOf="@id/room_toolbar_guide1"
            app:layout_constraintEnd_toEndOf="@id/room_toolbar_guide3"
            android:background="#ed2ca6"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/room_toolbar_guide5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.208"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/room_toolbar_guide6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.238"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/room_toolbar_guide7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.544"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/room_toolbar_guide8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.588"/>

        <TextView
            android:id="@+id/tv_nickname_room"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/room_toolbar_guide6"
            app:layout_constraintBottom_toBottomOf="@id/room_toolbar_guide8"
            app:layout_constraintStart_toStartOf="@id/room_toolbar_guide5"
            app:layout_constraintEnd_toEndOf="@id/room_toolbar_guide7"
            android:text="NickName"
            android:textSize="25sp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/room_toolbar_guide9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.563"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/room_toolbar_guide10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.291"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/room_toolbar_guide11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.776"/>

        <TextView
            android:id="@+id/tv_userLv_room"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/room_toolbar_guide9"
            app:layout_constraintBottom_toBottomOf="@id/room_toolbar_guide11"
            app:layout_constraintStart_toStartOf="@id/room_toolbar_guide5"
            app:layout_constraintEnd_toEndOf="@id/room_toolbar_guide10"
            android:text="Lv1"
            android:textSize="15sp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/room_toolbar_guide12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.700"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/room_toolbar_guide13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.500"/>

        <Button
            android:id="@+id/button_ready"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/room_toolbar_guide13"
            app:layout_constraintStart_toStartOf="@id/room_toolbar_guide12"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:text="준비"
            android:background="#7D362B"/>

        <Button
            android:id="@+id/button_out"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/room_toolbar_guide13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/room_toolbar_guide12"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="나가기"
            android:textColor="@color/white"
            android:background="#1A3437"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>